{
  "name": "mygameengine",
  "private": true,
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "generate-icons": "electron-icon-builder --input=./icon.png --output=icon --flatten",
    "packageDarwin": "electron-packager . 'FalloutShelter' --platform=darwin --arch=x64 --icon=./icon/icons/icon.icns --out=./dist --asar --app-version=1.0.0 --ignore=\"(dist|docs|.gitignore|LICENSE|README.md|webpack.config*|node_modules)\"",
    "packageWin": "electron-packager . 'FalloutShelter' --platform=win32 --arch=x64 --icon=./icon/icons/icon.ico --out=./dist --asar --app-version=1.0.0 --ignore=\"(dist|docs|.gitignore|LICENSE|README.md|webpack.config.js|node_modules)\"",
    "packageLinux": "electron-packager . 'FalloutShelter' --platform=linux --arch=x64 --out=./dist --asar --app-version=1.0.0 --ignore=\"(dist|docs|.gitignore|LICENSE|README.md|webpack.config.js|node_modules)\""
  },
  "devDependencies": {
    "electron-icon-builder": "^2.0.1",
    "electron-packager": "^15.5.1",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@flyover/box2d": "^1.0.1",
    "@microsoft/fast-components": "^2.30.6",
    "@types/ws": "^8.5.3",
    "copy-paste": "^1.3.0",
    "electron": "^18.3.5",
    "js-yaml": "^4.1.0",
    "ws": "^7.4.6",
    "vite": "^2.8.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "mygameengine"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "description": "游戏开发实践课程实践作业\r 这是一个具有可编辑的图形化界面的游戏引擎，可用于游戏开发。",
  "repository": {
    "type": "git",
    "url": "https://gitee.com/happyjohnchen/mygameenginesummer.git"
  },
  "keywords": [
    "gameengine"
  ],
  "author": "陈沫言",
  "license": "Apache-2.0"
}
